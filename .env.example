PORT=3000
COOKIE_NAME=hsp_session
# REQUIRED: Used for session encryption and cookie signing.
# SECURITY: Must be set to a strong random value (minimum 32 characters recommended).
# If omitted, the application will fail to start.
COOKIE_SECRET=change-me-to-a-strong-random-value-at-least-32-chars
# Required in production. If omitted, the app generates an ephemeral key,
# and encrypted remote server passwords cannot be decrypted after restart.
REMOTE_SERVERS_KEY=
# Set true only when serving over HTTPS.
# Defaults to false when omitted.
COOKIE_SECURE=false

# Optional: Enable demo mode to simulate all write operations without executing them.
# When enabled, all users can perform admin actions but changes won't be persisted.
# Useful for public demos or testing. Defaults to false when omitted.
# DEMO_MODE=false

# Optional: override data storage root directory.
# Defaults:
# - dev runs (bun run dev): ./data/secret
# - test runs: ./data/test
# - other modes: ./data
# DATA_DIR=data/secret
