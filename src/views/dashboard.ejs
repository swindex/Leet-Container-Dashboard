
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home Server Dashboard</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
  <link href="/public/styles.css" rel="stylesheet" />
</head>
<body class="hs-body">
  <div class="container py-4">
    <div class="row g-3 align-items-stretch mb-4">
      <div class="col-12">
        <div class="panel h-100 d-flex flex-column justify-content-center">
          <h1 class="mb-2"><i class="fa-solid fa-server me-2"></i>Home Server Dashboard</h1>
          <p class="text-muted mb-0">Monitor containers and control containers.</p>
        </div>
      </div>
    </div>

    <nav class="navbar navbar-expand-md hs-mobile-admin-nav d-md-none mb-3" aria-label="User and administration navigation">
      <div class="container-fluid px-0">
        <span class="navbar-brand mb-0"><i class="fa-solid fa-user me-2"></i>User Menu</span>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#mobile-user-admin-nav"
          aria-controls="mobile-user-admin-nav"
          aria-expanded="false"
          aria-label="Toggle user and administration menu"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="mobile-user-admin-nav">
          <div class="panel w-100 mt-2">
            <%- include('partials/userAdministrationBlock') %>
          </div>
        </div>
      </div>
    </nav>

    <% if (notice) { %>
      <div class="alert alert-success hs-flash-alert" role="alert"><i class="fa-solid fa-circle-check me-2"></i><%= notice %></div>
    <% } %>
    <% if (error) { %>
      <div class="alert alert-danger hs-flash-alert" role="alert"><i class="fa-solid fa-triangle-exclamation me-2"></i><%= error %></div>
    <% } %>

    <div class="panel mb-3">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <h2 class="h5 mb-0"><i class="fa-solid fa-server me-2"></i>Servers</h2>
        <small class="text-muted">Default marked with star</small>
      </div>
      <div class="server-band">
        <% servers.forEach((server) => { %>
          <div class="server-pill <%= server.id === activeServerId ? 'server-pill-active' : '' %> <%= !server.enabled ? 'server-pill-disabled' : '' %>">
            <div class="d-flex align-items-center gap-2">
              <i class="fa-solid fa-server"></i>
              <div>
                <div class="fw-semibold"><%= server.name %></div>
                <small class="text-muted"><%= server.username ? `${server.username}@` : '' %><%= server.host %></small>
              </div>
            </div>

            <div class="d-flex align-items-center gap-2">
              <% if (server.id === defaultServerId) { %>
                <span class="badge text-bg-warning"><i class="fa-solid fa-star me-1"></i>Default</span>
              <% } %>
              <% if (server.id === activeServerId) { %>
                <span class="badge text-bg-success">Active</span>
              <% } else if (can.canSwitchServers && server.enabled) { %>
                <form action="/servers/switch" method="post" class="d-inline">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                  <input type="hidden" name="serverId" value="<%= server.id %>" />
                  <button type="submit" class="btn btn-sm btn-hs-secondary">
                    <i class="fa-solid fa-right-left me-1"></i>Switch
                  </button>
                </form>
              <% } %>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <div class="panel mb-3">
      <div class="d-flex justify-content-between align-items-center mb-2 flex-wrap gap-2">
        <h2 class="h5 mb-0"><i class="fa-solid fa-microchip me-2"></i>Resource Consumption</h2>
        <small class="text-muted">Current snapshot from Docker</small>
      </div>
      <% if (metricsWarning) { %>
        <div class="alert alert-warning py-2 mb-2" role="alert"><i class="fa-solid fa-triangle-exclamation me-2"></i><%= metricsWarning %></div>
      <% } %>
      <div class="row g-2 small">
        <div class="col-6 col-md-3">
          <div class="border rounded p-2 h-100">
            <div class="text-muted">CPU Cores</div>
            <div class="fw-semibold"><%= serverMetrics.cpuCores %></div>
          </div>
        </div>
        <div class="col-6 col-md-3">
          <div class="border rounded p-2 h-100">
            <div class="text-muted">Total Memory</div>
            <div class="fw-semibold"><%= serverMetrics.totalMemory %></div>
          </div>
        </div>
        <div class="col-6 col-md-3">
          <div class="border rounded p-2 h-100">
            <div class="text-muted">Container Memory Used</div>
            <div class="fw-semibold"><%= serverMetrics.usedMemory %></div>
          </div>
        </div>
        <div class="col-6 col-md-3">
          <div class="border rounded p-2 h-100">
            <div class="text-muted">Memory Utilization</div>
            <div class="fw-semibold"><%= serverMetrics.memoryUtilization %></div>
            <small class="text-muted"><%= serverMetrics.monitoredContainers %> monitored container<%= serverMetrics.monitoredContainers === 1 ? '' : 's' %></small>
          </div>
        </div>
      </div>
    </div>

    <div class="row g-3">
      <div class="col-12 col-xl-9">
        <div class="panel">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="h4 mb-0"><i class="fa-brands fa-docker me-2"></i>Containers</h2>
            <span class="text-muted"><%= containers.length %> total on <strong><%= servers.find(s => s.id === activeServerId)?.name || 'Selected server' %></strong></span>
          </div>

          <div id="selected-action-bar" class="selected-action-bar d-none mb-3">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
              <div class="fw-semibold">Selected: <span id="selected-count">0</span></div>
              <div class="d-flex align-items-center flex-wrap gap-2">
                <form
                  id="bulk-remove-form"
                  action="/containers/remove"
                  method="post"
                  class="d-inline"
                  onsubmit="return confirm('Remove selected stopped containers? This permanently deletes container entries.');"
                >
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                  <div id="selected-container-inputs-remove"></div>
                  <button
                    id="bulk-remove-button"
                    type="submit"
                    class="btn btn-sm btn-outline-danger"
                    <%= can.canRestartContainers ? '' : 'disabled' %>
                  >
                    <i class="fa-solid fa-trash me-1"></i>Remove
                  </button>
                </form>

                <form
                  id="bulk-start-form"
                  action="/containers/start"
                  method="post"
                  class="d-inline"
                  onsubmit="return confirm('Start selected containers?');"
                >
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                  <div id="selected-container-inputs-start"></div>
                  <button
                    id="bulk-start-button"
                    type="submit"
                    class="btn btn-sm btn-success"
                    <%= can.canRestartContainers ? '' : 'disabled' %>
                  >
                    <i class="fa-solid fa-play me-1"></i>Start
                  </button>
                </form>

                <form
                  id="bulk-stop-form"
                  action="/containers/stop"
                  method="post"
                  class="d-inline"
                  onsubmit="return confirm('Stop selected containers? This may interrupt service.');"
                >
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                  <div id="selected-container-inputs-stop"></div>
                  <button
                    id="bulk-stop-button"
                    type="submit"
                    class="btn btn-sm btn-danger"
                    <%= can.canRestartContainers ? '' : 'disabled' %>
                  >
                    <i class="fa-solid fa-stop me-1"></i>Stop
                  </button>
                </form>

                <form
                  id="bulk-restart-form"
                  action="/containers/restart"
                  method="post"
                  class="d-inline"
                  onsubmit="return confirm('Restart selected containers? This may briefly interrupt service.');"
                >
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                  <div id="selected-container-inputs-restart"></div>
                  <button
                    id="bulk-restart-button"
                    type="submit"
                    class="btn btn-sm btn-hs-primary"
                    <%= can.canRestartContainers ? '' : 'disabled' %>
                  >
                    <i class="fa-solid fa-rotate-right me-1"></i>Restart
                  </button>
                </form>
              </div>
            </div>
          </div>

          <div class="table-responsive containers-table-wrap">
            <table class="table table-hs align-middle mb-0">
              <thead>
                <tr>
                  <th class="select-col">
                    <input
                      id="toggle-all-containers"
                      class="form-check-input"
                      type="checkbox"
                      aria-label="Select all containers"
                      <%= can.canRestartContainers ? '' : 'disabled' %>
                    />
                  </th>
                  <th>Name</th>
                  <th class="image-col">Image</th>
                  <th>Uptime</th>
                  <th>Status</th>
                  <th class="resource-desktop-col">Resources</th>
                </tr>
              </thead>
              <tbody>
                <% if (!containers.length) { %>
                  <tr>
                    <td colspan="6" class="text-center text-muted py-4">No containers detected.</td>
                  </tr>
                <% } %>
                <% groupedContainers.forEach(group => { %>
                  <tr class="compose-group-row">
                    <td class="group-select-cell">
                      <input
                        class="form-check-input group-checkbox"
                        type="checkbox"
                        data-group-key="<%= group.key %>"
                        aria-label="Select all containers in group <%= group.title %>"
                        <%= can.canRestartContainers ? '' : 'disabled' %>
                      />
                    </td>
                    <td colspan="5" class="fw-semibold">
                      <i class="fa-solid fa-layer-group me-2"></i><%= group.title %>
                      <% if (group.detail) { %>
                        <small class="text-muted ms-2"><%= group.detail %></small>
                      <% } %>
                      <small class="text-muted ms-2">(<%= group.containers.length %> container<%= group.containers.length === 1 ? '' : 's' %>)</small>
                      <% if (group.serviceLinks?.length) { %>
                        <div class="service-links mt-2">
                          <% group.serviceLinks.forEach(link => { %>
                            <a class="service-link" href="<%= link.url %>" target="_blank" rel="noopener noreferrer">
                              <i class="fa-solid fa-up-right-from-square"></i>
                              <span><%= link.label %></span>
                            </a>
                          <% }) %>
                        </div>
                      <% } %>
                    </td>
                  </tr>
                  <% group.containers.forEach(c => { %>
                    <% const stateText = (c.State || '').toLowerCase(); %>
                    <% const statusText = (c.Status || '').toLowerCase(); %>
                    <% const isRunning = stateText === 'running' || statusText.startsWith('up'); %>
                    <% const isRestarting = stateText === 'restarting' || statusText.includes('restarting'); %>
                    <% const statusClass = isRestarting ? 'status-pill status-pill-restarting' : (isRunning ? 'status-pill status-pill-running' : 'status-pill status-pill-stopped'); %>
                    <% const healthMatch = (c.Status || '').match(/\(([^)]+)\)/); %>
                    <% const rawHealthText = (healthMatch?.[1] || '').trim(); %>
                    <% const healthText = statusText.startsWith('up') ? rawHealthText.replace(/^health:\s*/i, '').trim() : ''; %>
                    <% const healthLower = healthText.toLowerCase(); %>
                    <% const hasKnownHealth = healthLower === 'healthy' || healthLower === 'unhealthy' || healthLower === 'starting'; %>
                    <% const normalizedHealth = hasKnownHealth ? (healthText.charAt(0).toUpperCase() + healthText.slice(1).toLowerCase()) : ''; %>
                    <% const exitedCodeMatch = (c.Status || '').match(/^Exited\s+\((\d+)\)/i); %>
                    <% const exitedCode = exitedCodeMatch ? Number.parseInt(exitedCodeMatch[1], 10) : NaN; %>
                    <% const hasExitCode = Number.isFinite(exitedCode); %>
                    <% const exitReasonByCode = {
                      0: 'Completed',
                      1: 'General error',
                      125: 'Docker run failed',
                      126: 'Command cannot execute',
                      127: 'Command not found',
                      137: 'Killed / Possible OOM',
                      139: 'Segmentation fault',
                      143: 'Terminated',
                    }; %>
                    <% const stoppedReason = hasExitCode
                      ? (exitReasonByCode[exitedCode] || `Error ${exitedCode}`)
                      : (stateText === 'dead' || statusText.startsWith('dead') ? 'Dead' : ''); %>
                    <% const stateLabel = stateText ? (stateText.charAt(0).toUpperCase() + stateText.slice(1)) : ''; %>
                    <% const isStopped = stateText === 'exited' || stateText === 'dead' || statusText.startsWith('exited') || statusText.startsWith('dead'); %>
                    <% const stoppedLabel = 'Stopped'; %>
                    <% const statusLabel = normalizedHealth || (isRestarting ? 'Restarting' : (isRunning ? 'Running' : (isStopped ? stoppedLabel : (stateLabel || 'Unknown')))); %>
                    <% const statusTitle = isStopped && stoppedReason ? `Stopped reason: ${stoppedReason}` : statusLabel; %>
                    <% const statusHasUpPrefix = /^up\s+/i.test(c.Status || ''); %>
                    <% const uptimeFromStatus = statusHasUpPrefix ? (c.Status || '').replace(/^Up\s+/i, '').replace(/\s*\([^)]*\)\s*$/,'').trim() : ''; %>
                    <% const uptimeText = isRunning ? (uptimeFromStatus || (c.RunningFor || '').trim() || '-') : '-'; %>
                    <tr class="container-main-row">
                      <td class="container-select-cell">
                        <input
                          class="form-check-input container-checkbox"
                          type="checkbox"
                          data-group-key="<%= group.key %>"
                          data-is-running="<%= isRunning ? 'true' : 'false' %>"
                          value="<%= c.Names %>"
                          aria-label="Select container <%= c.Names %>"
                          <%= can.canRestartContainers ? '' : 'disabled' %>
                        />
                      </td>
                      <td>
                        <div class="fw-semibold"><%= c.Names %></div>
                        <small class="text-muted"><%= c.ID.slice(0, 12) %></small>
                        <% if (c.serviceLinks?.length) { %>
                          <div class="service-links mt-1">
                            <% c.serviceLinks.forEach(link => { %>
                              <a class="service-link" href="<%= link.url %>" target="_blank" rel="noopener noreferrer">
                                <i class="fa-solid fa-up-right-from-square"></i>
                                <span><%= link.label %></span>
                              </a>
                            <% }) %>
                          </div>
                        <% } %>
                      </td>
                      <td class="image-col"><%= c.Image %></td>
                      <td><%= uptimeText || '-' %></td>
                      <td><span class="<%= statusClass %>" title="<%= statusTitle %>"><%= statusLabel %></span></td>
                      <td class="resource-desktop-col">
                        <div class="resource-block" aria-label="Resources for <%= c.Names %>">
                          <span class="resource-item"><i class="fa-solid fa-microchip resource-icon" aria-hidden="true"></i><strong>CPU</strong> <%= c.resourceCpu || '-' %></span>
                          <span class="resource-item"><i class="fa-solid fa-memory resource-icon" aria-hidden="true"></i><strong>Memory</strong> <%= c.resourceMemory || '-' %></span>
                          <span class="resource-item"><i class="fa-solid fa-network-wired resource-icon" aria-hidden="true"></i><strong>Net</strong> <%= c.resourceNetIo || '-' %></span>
                          <span class="resource-item"><i class="fa-solid fa-hard-drive resource-icon" aria-hidden="true"></i><strong>Disk</strong> <%= c.resourceBlockIo || '-' %></span>
                        </div>
                      </td>
                    </tr>
                    <tr class="resource-mobile-row" aria-label="Resources for <%= c.Names %>">
                      <td class="container-select-cell"></td>
                      <td colspan="5">
                        <div class="resource-block resource-block-mobile">
                          <span class="resource-item"><i class="fa-solid fa-microchip resource-icon" aria-hidden="true"></i><strong>CPU</strong> <%= c.resourceCpu || '-' %></span>
                          <span class="resource-item"><i class="fa-solid fa-memory resource-icon" aria-hidden="true"></i><strong>Memory</strong> <%= c.resourceMemory || '-' %></span>
                          <span class="resource-item"><i class="fa-solid fa-network-wired resource-icon" aria-hidden="true"></i><strong>Net</strong> <%= c.resourceNetIo || '-' %></span>
                          <span class="resource-item"><i class="fa-solid fa-hard-drive resource-icon" aria-hidden="true"></i><strong>Disk</strong> <%= c.resourceBlockIo || '-' %></span>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="col-12 col-xl-3">
        <div class="panel mb-3 d-none d-md-block">
          <h2 class="h5 mb-3"><i class="fa-solid fa-user me-2"></i>User Menu</h2>
          <%- include('partials/userAdministrationBlock') %>
        </div>

        <div class="panel mb-3">
          <h2 class="h5 mb-3"><i class="fa-solid fa-shield-halved me-2"></i>Permissions</h2>
          <ul class="list-unstyled mb-0 small">
            <li class="mb-2"><i class="fa-solid fa-eye me-2"></i>View containers: <strong><%= can.canViewContainers ? 'Yes' : 'No' %></strong></li>
            <li class="mb-2"><i class="fa-solid fa-rotate-right me-2"></i>Restart containers: <strong><%= can.canRestartContainers ? 'Yes' : 'No' %></strong></li>
            <li class="mb-2"><i class="fa-solid fa-power-off me-2"></i>Restart host: <strong><%= can.canRestartHost ? 'Yes' : 'No' %></strong></li>
            <li class="mb-2"><i class="fa-solid fa-right-left me-2"></i>Switch servers: <strong><%= can.canSwitchServers ? 'Yes' : 'No' %></strong></li>
            <li class="mb-2"><i class="fa-solid fa-users me-2"></i>Manage users: <strong><%= can.canManageUsers ? 'Yes' : 'No' %></strong></li>
            <li><i class="fa-solid fa-server me-2"></i>Manage servers: <strong><%= can.canManageServers ? 'Yes' : 'No' %></strong></li>
          </ul>
        </div>

      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    (() => {
      const flashAlerts = Array.from(document.querySelectorAll('.hs-flash-alert'));
      if (flashAlerts.length) {
        window.setTimeout(() => {
          flashAlerts.forEach((alertEl) => {
            alertEl.classList.add('hs-flash-alert-hidden');
            window.setTimeout(() => {
              alertEl.remove();
            }, 250);
          });
        }, 5000);
      }

      const toggleAll = document.getElementById('toggle-all-containers');
      const containerCheckboxes = Array.from(document.querySelectorAll('.container-checkbox'));
      const groupCheckboxes = Array.from(document.querySelectorAll('.group-checkbox'));
      const selectedBar = document.getElementById('selected-action-bar');
      const selectedCount = document.getElementById('selected-count');
      const selectedInputsRemove = document.getElementById('selected-container-inputs-remove');
      const selectedInputsStart = document.getElementById('selected-container-inputs-start');
      const selectedInputsStop = document.getElementById('selected-container-inputs-stop');
      const selectedInputsRestart = document.getElementById('selected-container-inputs-restart');
      const bulkRemoveButton = document.getElementById('bulk-remove-button');
      const bulkStartButton = document.getElementById('bulk-start-button');
      const bulkStopButton = document.getElementById('bulk-stop-button');
      const bulkRestartButton = document.getElementById('bulk-restart-button');

      if (
        !toggleAll ||
        !selectedBar ||
        !selectedCount ||
        !selectedInputsRemove ||
        !selectedInputsStart ||
        !selectedInputsStop ||
        !selectedInputsRestart ||
        !bulkRemoveButton ||
        !bulkStartButton ||
        !bulkStopButton ||
        !bulkRestartButton
      ) {
        return;
      }

      const selectableContainers = containerCheckboxes.filter((checkbox) => !checkbox.disabled);
      const selectableGroups = groupCheckboxes.filter((checkbox) => !checkbox.disabled);

      const getGroupContainers = (groupKey) =>
        selectableContainers.filter((checkbox) => checkbox.dataset.groupKey === groupKey);

      const setGroupState = (groupCheckbox) => {
        const groupItems = getGroupContainers(groupCheckbox.dataset.groupKey || '');
        const checkedCount = groupItems.filter((checkbox) => checkbox.checked).length;

        groupCheckbox.checked = groupItems.length > 0 && checkedCount === groupItems.length;
        groupCheckbox.indeterminate = checkedCount > 0 && checkedCount < groupItems.length;
      };

      const setGlobalState = () => {
        const checkedCount = selectableContainers.filter((checkbox) => checkbox.checked).length;

        toggleAll.checked = selectableContainers.length > 0 && checkedCount === selectableContainers.length;
        toggleAll.indeterminate = checkedCount > 0 && checkedCount < selectableContainers.length;
      };

      const updateSelectedAction = () => {
        const selected = selectableContainers.filter((checkbox) => checkbox.checked);
        const selectedRunning = selected.filter((checkbox) => checkbox.dataset.isRunning === 'true').length;
        const selectedStopped = selected.length - selectedRunning;

        selectedCount.textContent = String(selected.length);
        selectedBar.classList.toggle('d-none', selected.length === 0);
        bulkRemoveButton.disabled =
          selected.length === 0 ||
          bulkRemoveButton.hasAttribute('data-permission-denied') ||
          selectedRunning > 0;
        bulkStartButton.disabled =
          selected.length === 0 ||
          bulkStartButton.hasAttribute('data-permission-denied') ||
          selectedStopped === 0;
        bulkStopButton.disabled =
          selected.length === 0 ||
          bulkStopButton.hasAttribute('data-permission-denied') ||
          selectedRunning === 0;
        bulkRestartButton.disabled = selected.length === 0 || bulkRestartButton.hasAttribute('data-permission-denied');

        selectedInputsRemove.innerHTML = '';
        selectedInputsStart.innerHTML = '';
        selectedInputsStop.innerHTML = '';
        selectedInputsRestart.innerHTML = '';
        for (const checkbox of selected) {
          const createInput = () => {
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'containers';
            input.value = checkbox.value;
            return input;
          };

          selectedInputsRemove.appendChild(createInput());
          selectedInputsStart.appendChild(createInput());
          selectedInputsStop.appendChild(createInput());
          selectedInputsRestart.appendChild(createInput());
        }
      };

      if (bulkRemoveButton.disabled) {
        bulkRemoveButton.setAttribute('data-permission-denied', 'true');
      }

      if (bulkStartButton.disabled) {
        bulkStartButton.setAttribute('data-permission-denied', 'true');
      }

      if (bulkStopButton.disabled) {
        bulkStopButton.setAttribute('data-permission-denied', 'true');
      }

      if (bulkRestartButton.disabled) {
        bulkRestartButton.setAttribute('data-permission-denied', 'true');
      }

      if (!selectableContainers.length) {
        toggleAll.disabled = true;
      }

      selectableGroups.forEach((groupCheckbox) => {
        const groupItems = getGroupContainers(groupCheckbox.dataset.groupKey || '');
        if (!groupItems.length) {
          groupCheckbox.disabled = true;
          return;
        }

        groupCheckbox.addEventListener('change', () => {
          groupItems.forEach((checkbox) => {
            checkbox.checked = groupCheckbox.checked;
          });
          setGroupState(groupCheckbox);
          setGlobalState();
          updateSelectedAction();
        });
      });

      selectableContainers.forEach((checkbox) => {
        checkbox.addEventListener('change', () => {
          const groupCheckbox = selectableGroups.find((item) => item.dataset.groupKey === checkbox.dataset.groupKey);
          if (groupCheckbox) {
            setGroupState(groupCheckbox);
          }
          setGlobalState();
          updateSelectedAction();
        });
      });

      toggleAll.addEventListener('change', () => {
        selectableContainers.forEach((checkbox) => {
          checkbox.checked = toggleAll.checked;
        });

        selectableGroups.forEach((groupCheckbox) => setGroupState(groupCheckbox));
        setGlobalState();
        updateSelectedAction();
      });

      selectableGroups.forEach((groupCheckbox) => setGroupState(groupCheckbox));
      setGlobalState();
      updateSelectedAction();
    })();
  </script>
</body>
</html>
