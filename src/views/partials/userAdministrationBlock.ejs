<div class="d-flex justify-content-between align-items-center mb-3">
  <span class="text-muted"><%= user.username %></span>
  <span class="role-badge"><%= user.role %></span>
</div>

<form action="/logout" method="post" class="d-grid mb-3">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
  <button type="submit" class="btn btn-hs-secondary">
    <i class="fa-solid fa-right-from-bracket me-2"></i>Logout
  </button>
</form>

<h3 class="h6 mb-3"><i class="fa-solid fa-cog me-2"></i>Administration</h3>

<% if (can.canManageUsers || can.canManageServers || can.canManageSettings) { %>
  <div class="d-grid gap-2">
    <% if (can.canManageUsers) { %>
      <a href="/users" class="btn btn-hs-secondary w-100">
        <i class="fa-solid fa-users me-2"></i>User Management
      </a>
    <% } %>
    <% if (can.canManageServers) { %>
      <a href="/servers" class="btn btn-hs-secondary w-100">
        <i class="fa-solid fa-server me-2"></i>Server Management
      </a>
    <% } %>
    <% if (can.canManageSettings) { %>
      <a href="/settings" class="btn btn-hs-secondary w-100">
        <i class="fa-solid fa-sliders me-2"></i>Dashboard Settings
      </a>
    <% } %>
  </div>
<% } else { %>
  <p class="text-muted small mb-0">No administration actions available for your role.</p>
<% } %>

<div class="mt-3 pt-3 border-top">
  <h4 class="h6 mb-2"><i class="fa-solid fa-triangle-exclamation me-2"></i>Host Controls</h4>
  <p class="text-muted small">Host restart impacts all services and active sessions.</p>

  <% if (can.canRestartHost) { %>
    <form
      action="/host/restart"
      method="post"
      class="d-grid"
      onsubmit="return confirm('Restart host machine? This will impact all running services and active sessions.');"
    >
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <button type="submit" class="btn btn-hs-danger">
        <i class="fa-solid fa-power-off me-2"></i>Restart Host
      </button>
    </form>
  <% } else { %>
    <button type="button" class="btn btn-hs-disabled w-100" disabled>
      <i class="fa-solid fa-lock me-2"></i>Admin Permission Required
    </button>
  <% } %>
</div>