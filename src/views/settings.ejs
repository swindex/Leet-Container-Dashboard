<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard Settings - <%= dashboardSettings.appTitle %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
  <link href="/public/styles.css" rel="stylesheet" />
</head>
<body class="<%= pageBodyClass %>" data-hs-bg-image="<%= pageBackgroundImagePath %>">
  <div class="container py-4">
    <div class="row g-3 align-items-stretch mb-4">
      <div class="col-12 col-lg-8">
        <div class="panel h-100 d-flex flex-column justify-content-center">
          <h1 class="mb-2"><i class="fa-solid fa-sliders me-2"></i>Dashboard Settings</h1>
          <p class="text-muted mb-0">Customize app branding, theme, and background image.</p>
        </div>
      </div>
      <div class="col-12 col-lg-4">
        <div class="panel h-100">
          <%- include('partials/secondaryPageUserBlock', {
            user,
            extraLinks: () => {
              let links = '';
              if (can.canManageUsers) {
                links += '<a href="/users" class="btn btn-hs-secondary w-100"><i class="fa-solid fa-users me-2"></i>User Management</a>';
              }
              if (can.canManageServers) {
                links += '<a href="/servers" class="btn btn-hs-secondary w-100"><i class="fa-solid fa-server me-2"></i>Server Management</a>';
              }
              return links;
            }
          }) %>
        </div>
      </div>
    </div>

    <% if (notice) { %>
      <div class="alert alert-success hs-flash-alert" role="alert"><i class="fa-solid fa-circle-check me-2"></i><%= notice %></div>
    <% } %>
    <% if (error) { %>
      <div class="alert alert-danger hs-flash-alert" role="alert"><i class="fa-solid fa-triangle-exclamation me-2"></i><%= error %></div>
    <% } %>

    <div class="panel">
      <form action="/settings" method="post" enctype="multipart/form-data">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

        <div class="mb-3">
          <label for="appTitle" class="form-label">App Title</label>
          <input
            id="appTitle"
            name="appTitle"
            type="text"
            class="form-control hs-input"
            maxlength="120"
            value="<%= settings.appTitle %>"
            required
          />
        </div>

        <div class="mb-3">
          <label for="appSlogan" class="form-label">App Slogan</label>
          <input
            id="appSlogan"
            name="appSlogan"
            type="text"
            class="form-control hs-input"
            maxlength="220"
            value="<%= settings.appSlogan %>"
            required
          />
        </div>

        <div class="mb-3">
          <label for="theme" class="form-label">Theme</label>
          <select id="theme" name="theme" class="form-select hs-input" required>
            <option value="dark" <%= settings.theme === 'dark' ? 'selected' : '' %>>Dark</option>
            <option value="light" <%= settings.theme === 'light' ? 'selected' : '' %>>Light</option>
          </select>
        </div>

        <div class="mb-3">
          <label class="form-label d-block">Resource Visibility</label>
          <div class="form-check mb-2">
            <input type="hidden" name="showContainerResources" value="0" />
            <input
              id="showContainerResources"
              name="showContainerResources"
              type="checkbox"
              class="form-check-input"
              value="on"
              <%= settings.showContainerResources ? 'checked' : '' %>
            />
            <label for="showContainerResources" class="form-check-label">Show Container Resources</label>
          </div>
          <div class="form-check">
            <input type="hidden" name="showServerResources" value="0" />
            <input
              id="showServerResources"
              name="showServerResources"
              type="checkbox"
              class="form-check-input"
              value="on"
              <%= settings.showServerResources ? 'checked' : '' %>
            />
            <label for="showServerResources" class="form-check-label">Show Server Resources</label>
          </div>

          <hr class="my-3" />

          <div class="form-check mb-2">
            <input type="hidden" name="showImageName" value="0" />
            <input
              id="showImageName"
              name="showImageName"
              type="checkbox"
              class="form-check-input"
              value="on"
              <%= settings.showImageName !== false ? 'checked' : '' %>
            />
            <label for="showImageName" class="form-check-label">Show Image Name</label>
          </div>

          <div class="form-check">
            <input type="hidden" name="showContainerHash" value="0" />
            <input
              id="showContainerHash"
              name="showContainerHash"
              type="checkbox"
              class="form-check-input"
              value="on"
              <%= settings.showContainerHash !== false ? 'checked' : '' %>
            />
            <label for="showContainerHash" class="form-check-label">Show Container Hash</label>
          </div>
        </div>

        <div class="mb-3">
          <label for="backgroundImage" class="form-label">Background Image Upload</label>
          <input
            id="backgroundImage"
            name="backgroundImage"
            type="file"
            class="form-control hs-input"
            accept="image/png,image/jpeg,image/webp,image/gif"
          />
          <% if (settings.backgroundImagePath) { %>
            <small class="text-muted d-block mt-2">Current: <%= settings.backgroundImagePath %></small>
          <% } %>
        </div>

        <button type="submit" class="btn btn-hs-primary">
          <i class="fa-solid fa-floppy-disk me-2"></i>Save Settings
        </button>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    (() => {
      const configuredBackground = document.body.getAttribute('data-hs-bg-image') || '';
      if (configuredBackground) {
        const escapedPath = configuredBackground.replace(/'/g, "\\'");
        document.body.style.setProperty('--hs-bg-image', `url('${escapedPath}')`);
      }

      const flashAlerts = Array.from(document.querySelectorAll('.hs-flash-alert'));
      if (!flashAlerts.length) {
        return;
      }

      window.setTimeout(() => {
        flashAlerts.forEach((alertEl) => {
          alertEl.classList.add('hs-flash-alert-hidden');
          window.setTimeout(() => {
            alertEl.remove();
          }, 250);
        });
      }, 5000);
    })();
  </script>
</body>
</html>