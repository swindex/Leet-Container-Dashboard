<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Server Management - <%= dashboardSettings.appTitle %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
  <link href="/public/styles.css" rel="stylesheet" />
</head>
<body class="<%= pageBodyClass %>" data-hs-bg-image="<%= pageBackgroundImagePath %>">
  <div class="container py-4">
    <div class="row g-3 align-items-stretch mb-4">
      <div class="col-12 col-lg-8">
        <div class="panel h-100 d-flex flex-column justify-content-center">
          <h1 class="mb-2"><i class="fa-solid fa-server me-2"></i>Server Management</h1>
          <p class="text-muted mb-0">Manage target servers, credentials, and default server selection.</p>
        </div>
      </div>
      <div class="col-12 col-lg-4">
        <div class="panel h-100">
          <%- include('partials/secondaryPageUserBlock', {
            user,
            extraLinks: () => {
              let links = '';
              if (can.canManageUsers) {
                links += '<a href="/users" class="btn btn-hs-secondary w-100"><i class="fa-solid fa-users me-2"></i>User Management</a>';
              }
              if (can.canManageSettings) {
                links += '<a href="/settings" class="btn btn-hs-secondary w-100"><i class="fa-solid fa-sliders me-2"></i>Dashboard Settings</a>';
              }
              return links;
            }
          }) %>
        </div>
      </div>
    </div>

    <% if (notice) { %>
      <div class="alert alert-success hs-flash-alert" role="alert"><i class="fa-solid fa-circle-check me-2"></i><%= notice %></div>
    <% } %>
    <% if (error) { %>
      <div class="alert alert-danger hs-flash-alert" role="alert"><i class="fa-solid fa-triangle-exclamation me-2"></i><%= error %></div>
    <% } %>

    <div class="row g-3">
      <div class="col-12">
        <div class="panel">
          <% const hasLocalServer = servers.some((server) => server.isLocal || server.id === 'local'); %>
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="h4 mb-0"><i class="fa-solid fa-server me-2"></i>Configured Servers</h2>
            <span class="text-muted"><%= servers.length %> total</span>
          </div>

          <div class="table-responsive">
            <table class="table table-hs align-middle mb-0">
              <thead>
                <tr>
                  <th>Server</th>
                  <th>Status</th>
                  <th>Default</th>
                  <th class="text-end">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% servers.forEach((server) => { %>
                  <tr>
                    <td>
                      <div class="fw-semibold"><i class="fa-solid fa-server me-2"></i><%= server.name %></div>
                      <small class="text-muted"><%= server.username ? `${server.username}@` : '' %><%= server.host %></small>
                    </td>
                    <td>
                      <% if (server.enabled) { %>
                        <span class="status-pill">Enabled</span>
                      <% } else { %>
                        <span class="status-pill status-pill-inactive">Disabled</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (server.id === defaultServerId) { %>
                        <span class="badge text-bg-warning"><i class="fa-solid fa-star me-1"></i>Default</span>
                      <% } else if (server.enabled) { %>
                        <form action="/servers/<%= encodeURIComponent(server.id) %>/default" method="post" class="d-inline">
                          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                          <button type="submit" class="btn btn-sm btn-hs-secondary">Set Default</button>
                        </form>
                      <% } %>
                    </td>
                    <td class="text-end">
                      <% if (server.isLocal) { %>
                        <span class="badge text-bg-info me-1">Local</span>
                      <% } %>
                        <button
                          type="button"
                          class="btn btn-sm btn-hs-secondary"
                          data-bs-toggle="modal"
                          data-bs-target="#edit-server-modal-<%= server.id %>"
                        >
                          <i class="fa-solid fa-pen me-1"></i>Edit
                        </button>
                        <form
                          action="/servers/<%= encodeURIComponent(server.id) %>/delete"
                          method="post"
                          class="d-inline ms-1"
                          onsubmit="return confirm('Delete this server?');"
                        >
                          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                          <button type="submit" class="btn btn-sm btn-hs-danger">
                            <i class="fa-solid fa-trash me-1"></i>Delete
                          </button>
                        </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <div class="mt-3">
            <button type="button" class="btn btn-hs-primary" data-bs-toggle="modal" data-bs-target="#add-server-modal">
              <i class="fa-solid fa-plus me-2"></i>Add Remote Server
            </button>
            <% if (!hasLocalServer) { %>
              <form action="/servers/local/add" method="post" class="d-inline ms-2">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <button type="submit" class="btn btn-hs-secondary">
                  <i class="fa-solid fa-house-signal me-2"></i>Add Local Server
                </button>
              </form>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="add-server-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title fs-5"><i class="fa-solid fa-plus me-2"></i>Add Remote Server</h2>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/servers" method="post">
          <div class="modal-body">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

            <div class="mb-3">
              <label for="add-name" class="form-label">Display Name</label>
              <input id="add-name" name="name" type="text" class="form-control hs-input" required maxlength="100" />
            </div>

            <div class="mb-3">
              <label for="add-host" class="form-label">Host / IP</label>
              <input id="add-host" name="host" type="text" class="form-control hs-input" required maxlength="255" />
            </div>

            <div class="mb-3">
              <label for="add-username" class="form-label">Username</label>
              <input id="add-username" name="username" type="text" class="form-control hs-input" required maxlength="100" />
            </div>

            <div class="mb-3">
              <label for="add-password" class="form-label">Password</label>
              <input id="add-password" name="password" type="password" class="form-control hs-input" />
            </div>

            <div class="form-check mb-0">
              <input id="add-enabled" name="enabled" type="checkbox" class="form-check-input" checked />
              <label class="form-check-label" for="add-enabled">Enabled</label>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-hs-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-hs-primary">
              <i class="fa-solid fa-plus me-2"></i>Create Server
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <% servers.forEach((server) => { %>
      <div class="modal fade" id="edit-server-modal-<%= server.id %>" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h2 class="modal-title fs-5"><i class="fa-solid fa-pen me-2"></i>Edit Server</h2>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/servers/<%= encodeURIComponent(server.id) %>/update" method="post">
              <div class="modal-body">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

                <div class="mb-3">
                  <label for="edit-name-<%= server.id %>" class="form-label">Display Name</label>
                  <input id="edit-name-<%= server.id %>" name="name" class="form-control hs-input" value="<%= server.name %>" required maxlength="100" />
                </div>

                <div class="mb-3">
                  <label for="edit-host-<%= server.id %>" class="form-label">Host / IP</label>
                  <input id="edit-host-<%= server.id %>" name="host" class="form-control hs-input" value="<%= server.host %>" required maxlength="255" />
                </div>

                <div class="mb-3">
                  <label for="edit-username-<%= server.id %>" class="form-label">Username</label>
                  <input id="edit-username-<%= server.id %>" name="username" class="form-control hs-input" value="<%= server.username %>" <%= server.isLocal ? '' : 'required' %> maxlength="100" />
                </div>

                <div class="mb-3">
                  <label for="edit-password-<%= server.id %>" class="form-label">New Password (optional)</label>
                  <input id="edit-password-<%= server.id %>" name="password" type="password" class="form-control hs-input" placeholder="Leave blank to keep current password" />
                </div>

                <div class="form-check mb-0">
                  <input id="edit-enabled-<%= server.id %>" class="form-check-input" type="checkbox" name="enabled" <%= server.enabled ? 'checked' : '' %> />
                  <label class="form-check-label" for="edit-enabled-<%= server.id %>">Enabled</label>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-hs-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-hs-primary">
                  <i class="fa-solid fa-floppy-disk me-2"></i>Save Changes
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
  <% }) %>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    (() => {
      const configuredBackground = document.body.getAttribute('data-hs-bg-image') || '';
      if (configuredBackground) {
        const escapedPath = configuredBackground.replace(/'/g, "\\'");
        document.body.style.setProperty('--hs-bg-image', `url('${escapedPath}')`);
      }

      const flashAlerts = Array.from(document.querySelectorAll('.hs-flash-alert'));
      if (!flashAlerts.length) {
        return;
      }

      window.setTimeout(() => {
        flashAlerts.forEach((alertEl) => {
          alertEl.classList.add('hs-flash-alert-hidden');
          window.setTimeout(() => {
            alertEl.remove();
          }, 250);
        });
      }, 5000);
    })();
  </script>
</body>
</html>
